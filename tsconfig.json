{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "dist",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"rootDir": "src"
	},
	"lib": ["es2015"],
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
